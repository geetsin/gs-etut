@model Etut.Models.ViewModels.ChangePasswordVM

<div class="container">

    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <p class="mt-5 h2">Change your password</p>
            <form class="mt-5 mw-50" method="post" asp-action="ChangePassword" asp-controller="Account">
                
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input asp-for="CurrentPassword" type="password" id="inputCurrentPassword" class="form-control"/>
                    <label asp-for="CurrentPassword" class="form-label" for="form2Example2">Current Password</label>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input asp-for="NewPassword" type="password" id="inputNewPassword" class="form-control" />
                    <label asp-for="NewPassword" class="form-label" for="form2Example2">New Password</label>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input asp-for="ConfirmNewPassword" type="password" id="inputConfirmNewPassword" class="form-control" />
                    <label asp-for="ConfirmNewPassword" class="form-label" for="form2Example2">Confirm New Password</label>
                </div>

                @*<div asp-validation-summary="All" id="aspValidation" class="alert alert-danger mt-2"></div>*@

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Change Password    </button>

            </form>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}