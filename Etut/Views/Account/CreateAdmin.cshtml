@model Etut.Models.ViewModels.SignupVM

@{
    ViewData["Title"] = "Create Admin";
}

<div class="container">
    <div class="row ">


        <div class="form-signin mt-5 w-75 text-center">

            <h1 class="display-4 mb-3 fw-normal text-dark">Create Admin</h1>
            <p class="text-muted mb-3 fw-normal">Create a new admin account below</p>
            <form class="" id="signupForm" method="post" asp-action="CreateAdmin" asp-controller="Account">

                <div class="form-group mb-3">
                    <input type="text" asp-for="FirstName" class="form-control" id="inputFirstName" placeholder="First name">
                </div>
                <div class="form-group mb-3">
                    <input type="text" asp-for="LastName" class="form-control" id="inputLastName" placeholder="Last name">
                </div>

                <div class="form-group mb-3">
                    <input type="email" asp-for="Email" class="form-control" id="inputEmail" placeholder="Email">
                </div>
                <div class="form-group mb-3">
                    <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
                <div class="form-group mb-3">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="inputConfirmPassword" placeholder="Confirm password">
                </div>


                <div asp-validation-summary="All" class="text-danger mt-2"></div>

                <button class="w-50 btn btn-lg btn-primary" type="submit">Create</button>

            </form>
        </div>


    </div>
</div>


@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
