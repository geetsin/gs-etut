@using Etut.Models.DataModels
@using Etut.Utilities
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

<!-- Modal -->
<div class="modal fade" id="viewEditUsersModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewEditUsersModalTitle">View User</h5>

                <button id="btnEditOnModal" type="button" class="btn btn-close" onclick="closeViewEditUsersModal()">  </button>
            </div>
            <div class="modal-body">
                <form>
                    <div id="userId"></div>
                    <div class="input-group">
                        <input type="text" aria-label="First name" class="form-control" id="modalInputFirstName" placeholder="First Name" disabled>
                        <input type="text" aria-label="Last name" class="form-control" id="modalInputLastName" placeholder="Last Name" disabled>
                    </div>
@*                    <div class="form-group mb-3 disabled">
                        <input type="text" class="form-control" id="modalInputName" placeholder="Name" disabled>
                    </div>*@
                    <div class="form-group mb-3">
                        <input type="email" class="form-control" id="modalInputEmail" placeholder="Email" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label>Created On: </label><input type="text" class="form-control" id="modalInputCreationDetails" placeholder="Date Time" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="modalInputCheck" disabled>
                            <label class="form-check-label" id="modalApproveLabel" for="gridCheck">
                                Approved User
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnApproveOnModal" type="button" class="btn btn-danger ml-5" onclick="approveUser()"> Approve </button>
                <button id="btnSaveChanges" type="button" class="btn btn-primary disabled" onclick="updateUserData()">Save changes</button>
                <button id="btnEditOnModal" type="button" class="btn btn-light" onclick="enableModalEdit()"> Edit </button>

            </div>
        </div>
    </div>
</div>