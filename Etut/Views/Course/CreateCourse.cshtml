@model Etut.Models.ViewModels.CourseVM

@{
    ViewData["Title"] = "Create Course";
}



<div class="container">

    <form id="account" method="post">
        <div class="d-grid gap-2 col-3 mx-auto mt-3">
            <h2 class="mt-4">Course Deatils</h2>
        </div>
        <div class="mb-3">
            <label class="form-label" for="inputCourseName" >Name*</label>
            <input type="text" class="form-control" id="inputCourseName" placeholder="Course title">
            
        </div>
        <div class="form-group mt-3">
            <label class="form-label" for="inputCourseDescription">Course Description*</label>
            <textarea class="form-control" id="inputCourseDescription" rows="3" placeholder="Course description"></textarea>
        </div>
        <hr class="mt-3">
        <div class="d-grid gap-2 col-2 mx-auto mt-3">
            <h3 class="mt-5">Chapters</h3>
        </div>

        <div id="video-list">

                <div class="form-group row">
                    <div class="video-chapter">
                        <label class="form-label" for="inputChapterName">Chapter 1</label>
                        <input type="text" class="form-control" id="inputChapterName" placeholder="Chapter 1 Title">
                        <textarea class="form-control mt-1" id="inputChapterDescription" rows="2" placeholder="Chapter 1 Description"></textarea>
                        <input class="form-control mt-2" type="text" id="inputVideoUrl" placeholder="Chapter 1 Video URL">
                    </div>
                </div>


        </div>
        <div class="d-grid gap-2 col-6 mx-auto mt-3">
            <button type="button" class="btn btn-primary btn-sm" id="addNewChapterBtn" onclick="addNewVideoChapter()">Add another chapter</button>
        </div>
        <div class="d-grid gap-2 mt-3">
            <button class="btn btn-danger btn-lg" onclick="event.preventDefault(); submitCourse()">Submit Course</button>
        </div>
    </form>


